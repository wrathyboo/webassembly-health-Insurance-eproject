@page "/employee/{username}"
@using System.Net.Http.Headers
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Member, Administrator")]
@using HealthInsurance.Shared
@using Microsoft.AspNetCore.Components.Authorization
@inject HttpClient Http
@inject NavigationManager navigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
<h3>Employee Overview</h3>


@if (User == null)
{
    <p>Loading user infomation...</p>
}
else
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                User Id:
            </dt>
            <dd class="col-sm-10">
                @User?.Id
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                Fullname:
            </dt>
            <dd class="col-sm-10">
                @User?.FirstName @User?.LastName
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                Username:
            </dt>
            <dd class="col-sm-10">
                @User?.UserName
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                Email:
            </dt>
            <dd class="col-sm-10">
                @User?.Email
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                Designation:
            </dt>
            <dd class="col-sm-10">
                @User?.Designation
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                 Address:
            </dt>
            <dd class="col-sm-10">
                @User?.Address
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                Contact phone number:
            </dt>
            <dd class="col-sm-10">
                @User?.PhoneNumber
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                Country:
            </dt>
            <dd class="col-sm-10">
                @User?.Country
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                State:
            </dt>
            <dd class="col-sm-10">
                @User?.State
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                City:
            </dt>
            <dd class="col-sm-10">
                @User?.City
            </dd>
        </dl>
        @if (User?.PolicyOnEmployee != null)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    Policy Name:
                </dt>
                <dd class="col-sm-10">
                    @User?.PolicyOnEmployee?.Name
                </dd>
            </dl>
        }
        else
        {
            <dl class="row">
                <dt class="col-sm-2">
                    Policy:
                </dt>
                <dd class="col-sm-10">
                    No policy attached!
                </dd>
            </dl>
        }
        <button class="btn btn-primary" @onclick="@(() => ChangePassword(Username!))" style="margin-right:10px">Change password</button>
        @if (User?.PolicyOnEmployee != null)
        {
            <button class="btn btn-primary" @onclick="@(() => PolicyDetails(Username!, User!.PolicyOnEmployee!.Id))">Policy details</button>
        }
        else
        {
            <button class="btn btn-primary" @onclick="@(() => PolicyOrder(Username!))">Order policy</button>
        }
    </div>
}

@code {
    [Parameter]
    public string? Username { get; set; }

    public ApplicationUser User { get; set; } = new ApplicationUser();

    protected override async Task OnParametersSetAsync()
    {
        if (Username != null)
        {
            User = await Http.GetFromJsonAsync<ApplicationUser>($"api/user/{Username}");

        }
    }

    void PolicyDetails(string username, int id)
    {
        navigationManager.NavigateTo($"/employee/{username}/policy/{id}");
    }

    void PolicyOrder(string username)
    {
        navigationManager.NavigateTo($"/policy-order/{username}");
    }

    void ChangePassword(string username)
    {
        navigationManager.NavigateTo($"/change-password/{username}");
    }
}
